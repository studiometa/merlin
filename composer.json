{
    "name": "studiometa/merlin",
    "description": "Studiometa WordPress CLI.",
    "license": "MIT",
    "keywords": ["console", "cli", "command line", "terminal"],
    "authors": [
        {
            "name": "Studio Meta",
            "email": "agence@studiometa.fr"
        }
    ],
    "require": {
        "php": "^7.3",
        "phpstan/phpstan": "^0.12.99",
        "squizlabs/php_codesniffer": "^3.6",
        "symfony/console": "^5.3",
        "symfony/yaml": "^5.3"
    },
    "autoload": {
        "psr-4": {
            "Merlin\\": "app"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "scripts": {
        "phpcs": "phpcs -s --colors --extensions=php --standard=./phpcs.xml",
        "phpstan": "phpstan analyse --memory-limit=512M",
        "phpunit": "./vendor/bin/phpunit tests"
    },
    "prefer-stable": true,
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    }
}
